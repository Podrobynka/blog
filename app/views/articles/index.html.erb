<h1>Articles:</h1>
<%= link_to 'New article', new_article_path %>
<% @articles.each do |article| %>
  <div>
    <h3><%= article.title %></h3>
    <p><%= article.text %></p>
    <h6><em><%= article.updated_at %></em></h6>

    <h6>
      <em><%= link_to 'Show', article_path(article) %></em> |
      <em><%= link_to 'Edit', edit_article_path(article) %></em> |
      <em><%= link_to 'Destroy', article_path(article),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></em>
    </h6>
    <hr>
  </div>
  <br>
<% end %>
