<% @articles.each do |article| %>
  <div class="row">
    <div class="col-sm-4">
      <h3 class="row"><%= article.title %></h3>
      <br>
      <h6 class="row"><em><%= article.updated_at %></em></h6>
      <h6 class="row">
        <em><%= link_to 'Show', article_path(article) %></em> |
        <em><%= link_to 'Edit', edit_article_path(article) %></em> |
        <em><%= link_to 'Destroy', article_path(article),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></em>
      </h6>
    </div>
    <div class="col-sm-8">
      <p class="lead"><%= article.text %></p>
    </div>
  </div>
  <hr>
<% end %>
