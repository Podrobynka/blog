<h1>Articles:</h1>

<% @articles.each do |article| %>
  <div>
    <h3><%= article.title %></h3>
    <p><%= article.text %></p>
    <h6><em><%= article.updated_at %></em></h6>

    <h6>
      <em><%= link_to 'Show', article_path(article) %></em>
      <em><%= link_to 'Edit', edit_article_path(article) %></em>
      <!-- <em><a href="/articles/<%= article.id %>/edit">Edit</a></em> -->
    </h6>
    <hr>
  </div>
  <br>
<% end %>
