<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <ul>
      <% @article&.errors&.full_messages&.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
